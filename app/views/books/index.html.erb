<h1>Books</h1>

  <table>

    <thead>
      <th>title</th>
      <th>body</th>
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
          <td>
            <%= link_to "show", book_path(book.id) %>
          </td>
          <td>
            <%= link_to "Edit", edit_book_path(book.id) %>
          </td>
          <td>
            <%= link_to "destroy", book_path(book.id), method: :delete %>
          </td>

      </tr>
    </tbody>
    <% end %>

  </table>




